.btn-group.pull-right
  %button.btn.btn-default.btn-xs.dropdown-toggle{type: "button", data: {toggle: "dropdown"}}
    %span.glyphicon.glyphicon-cog
    %span.sr-only Toggle Dropdown
  %ul.dropdown-menu{ role: "menu"}
    %li
      = link_to content_tag(:i, '', class: 'glyphicon glyphicon-plus') + t('datagrid.table.actions.daily_update'), new_campaign_daily_tracking_path(model), title: t('datagrid.table.actions.daily_update')
    %li
      = link_to content_tag(:i, '', class: 'glyphicon glyphicon-import') + t('datagrid.table.actions.daily_import'), import_campaign_daily_trackings_path(model), title: t('datagrid.table.actions.daily_import')
    - if model.has_location_breakdown?
      %li
        = link_to content_tag(:i, '', class: 'glyphicon glyphicon-map-marker') + t('datagrid.table.actions.location_import'), campaign_location_trackings_path(model), title: ('datagrid.table.actions.location_import')
    %li
      = link_to content_tag(:i, '', class: 'glyphicon glyphicon-import') + t('datagrid.table.actions.other_reports_import'), campaign_os_trackings_path(model), title: t('datagrid.table.actions.other_reports_import')
    - if model.has_ads_group?
      %li
        = link_to content_tag(:i, '', class: 'glyphicon glyphicon-list-alt') + t('datagrid.table.actions.ads_group'), campaign_ads_group_index_path(model), title: t('datagrid.table.actions.ads_group')
    %li
      = link_to content_tag(:i, '', class: 'glyphicon glyphicon-pencil') + t('datagrid.table.actions.edit'), edit_campaign_path(model), title: t('datagrid.table.actions.edit')
    - if !model.is_attached_io
      %li
        = link_to content_tag(:i, '', :class => 'glyphicon glyphicon-paperclip') + t('datagrid.table.actions.import_signed_io'), import_signed_io_campaigns_path(model), :title => t('datagrid.table.actions.import_signed_io')