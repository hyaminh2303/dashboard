- breadcrumb :location_tracking, @location_tracking
- content_for :header do
  = t('views.location_trackings.show.title')
.row
  .col-md-6
    .box.box-solid.box-primary
      .box-header
        %h3.box-title= t('views.location_trackings.show.info')
        .box-tools.pull-right
          = link_to content_tag(:span, '', :class => 'glyphicon glyphicon-pencil'), edit_location_tracking_path(@location_tracking), :class => 'btn btn-primary btn-xs'
      / /.box-header
      .box-body.dl-horizontal
        %dl
          %dt= t('models.location_tracking.fields.campaign')
          %dd= @location_tracking.campaign
          %dt= t('models.location_tracking.fields.date')
          %dd= @location_tracking.date
          %dt= t('models.location_tracking.fields.location')
          %dd= @location_tracking.location
          %dt= t('models.location_tracking.fields.views')
          %dd= @location_tracking.views
          %dt= t('models.location_tracking.fields.clicks')
          %dd= @location_tracking.clicks
      / /.box-body
    / /.box