- total_count = @l_total_rows
.row
  .col-xs-6
    .dataTables_info
      - if total_count > 0
        Showing #{(assets.current_page - 1) * assets.limit_value + 1}
        to #{assets.current_page * assets.limit_value > total_count ? total_count : assets.current_page * assets.limit_value}
        of #{total_count} entries
      - else
        There is no record.
  .col-xs-6
    .dataTables_paginate.paging_bootstrap
      = paginate assets, :total_pages => (@l_total_rows/(assets.limit_value*1.0)).ceil
